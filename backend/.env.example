# ⚠️  SECURITY WARNING ⚠️
# NEVER commit this file with real values!
# This is a template - copy to .env and fill with real credentials

# ====================
# Server Configuration
# ====================
PORT=3000
NODE_ENV=development

# ====================
# Database Configuration
# ====================

# PostgreSQL (legacy - can be removed if fully migrated to Firestore)
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=your_postgres_password
PG_DATABASE=labdb

# MongoDB (for reservations and reports)
MONGO_URI=mongodb://localhost:27017/gestor_lab

# ====================
# JWT Configuration
# ====================
# ⚠️  Generate strong secrets: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_MIN_256_BITS
JWT_EXPIRES_IN=30m
REFRESH_TOKEN_SECRET=REPLACE_WITH_DIFFERENT_STRONG_SECRET
REFRESH_TOKEN_EXPIRES_IN=30d

# ====================
# Firebase Configuration
# ====================
# Download service account JSON from Firebase Console
# Save as serviceAccountKey.json in backend/ directory
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# OR use environment variable (for deployment):
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# ====================
# Backblaze B2 Storage
# ====================
# Get credentials from: https://secure.backblaze.com/app_keys.htm
B2_KEY_ID=your_b2_key_id_here
B2_APPLICATION_KEY=your_b2_application_key_here
B2_BUCKET_ID=your_bucket_id
B2_BUCKET_NAME=your-bucket-name
B2_REGION=us-west-004  # Optional, default: us-west-004

# ====================
# CORS Configuration
# ====================
CORS_ORIGIN=http://localhost:5173

# ====================
# Cookie Configuration
# ====================
COOKIE_SECURE=false  # Set to true in production (requires HTTPS)
SESSION_SECRET=REPLACE_WITH_STRONG_SESSION_SECRET

# ====================
# Admin Configuration
# ====================
# Comma-separated list of admin emails
ADMIN_EMAILS=admin@example.com,admin2@example.com

# ====================
# Development/Debug
# ====================
# ⚠️  NEVER set to true in production!
DEV_BYPASS_AUTH=false
